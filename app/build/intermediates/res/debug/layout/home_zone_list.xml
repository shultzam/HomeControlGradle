<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:gravity="center" >
    
    <CheckBox 
        android:id="@+id/cbZone"
        android:layout_width="@dimen/gridstd_imageview_size"
        android:layout_height="@dimen/gridstd_imageview_size"
        android:padding="@dimen/gridstd_imageview_padding"  />
    
    <TextView 
        android:id="@+id/tvZoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbZone"
        android:textSize="@dimen/grid_icon_sub" />

</RelativeLayout>
